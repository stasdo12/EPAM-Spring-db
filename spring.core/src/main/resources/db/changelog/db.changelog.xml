<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet for training-type table -->
    <changeSet id="1" author="StanDI">
        <createTable tableName="training_type">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="training_type_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet for users table -->
    <changeSet id="2" author="StanDi">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet for trainee table -->
    <changeSet id="3" author="StanDi">
        <createTable tableName="trainee">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_of_birth" type="DATE"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="trainee"
                baseColumnNames="user_id"
                constraintName="fk_trainee_user"
                referencedTableName="users"
                referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for trainer table -->
    <changeSet id="4" author="StanDi">
        <createTable tableName="trainer">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="training_type_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="trainer"
                baseColumnNames="user_id"
                constraintName="fk_trainer_user"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="trainer"
                baseColumnNames="training_type_id"
                constraintName="fk_trainer_training_type"
                referencedTableName="training_type"
                referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for trainee_has_trainer table -->
    <changeSet id="5" author="StanDi">
        <createTable tableName="trainee_has_trainer">
            <column name="trainee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trainer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="trainee_id, trainer_id"
                constraintName="pk_trainee_has_trainer"
                tableName="trainee_has_trainer"/>

        <addForeignKeyConstraint
                baseTableName="trainee_has_trainer"
                baseColumnNames="trainee_id"
                constraintName="fk_trainee_has_trainer_trainee"
                referencedTableName="trainee"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="trainee_has_trainer"
                baseColumnNames="trainer_id"
                constraintName="fk_trainee_has_trainer_trainer"
                referencedTableName="trainer"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- ChangeSet for training table -->
    <changeSet id="6" author="StanDi">
        <createTable tableName="training">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trainee_id" type="BIGINT"/>
            <column name="trainer_id" type="BIGINT"/>
            <column name="training_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="training_type_id" type="BIGINT"/>
            <column name="training_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="training_duration" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="training"
                baseColumnNames="trainee_id"
                constraintName="fk_training_trainee_id"
                referencedTableName="trainee"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="training"
                baseColumnNames="trainer_id"
                constraintName="fk_training_trainer_id"
                referencedTableName="trainer"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="training"
                baseColumnNames="training_type_id"
                constraintName="fk_training_training_type_id"
                referencedTableName="training_type"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
